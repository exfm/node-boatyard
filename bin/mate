#!/usr/bin/env node

"use strict";

var os = require('os'),
    path = require('path'),
    nconf = require('nconf'),
    cluster = require('cluster'),
    winston = require('winston'),
    hostname = os.hostname(),
    task = {};

nconf.argv()
    .env()
    .use('memory');

nconf.defaults({
    'captain': 'localhost',
    'hands': os.cpus().length,
    'task': './examples/simple/task.js',
    'queue-name': 'boatyard-queue',
    'key': 'awskey',
    'secret': 'awssecret'
});

var yard = require('boatyard'),
    Mate = yard.Mate,
    Hand = yard.Hand,
    taskPath = path.resolve(nconf.get('task'));

task = require(taskPath);

if (cluster.isMaster){
    new Mate(hostname, nconf)
        .allHandsOnDeck();
}
else {
    new Hand(hostname).getToWork(function(msg){
        task.apply(this, [msg]);
    });
}